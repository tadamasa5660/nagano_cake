<div class="body">
  <div class="container">
   <h3 class="col-xs-offset-1">ジャンル一覧・追加</h3>
   <div class="row">
    <div class="leftspace">
     <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <table>
       <thead>
        <tr>
         <th></th>
         <th></th>
         <th></th>
        </tr>
       </thead>
       <tbody>
        <tr class="center-align">
         <td class="col-xs-3" >
          <%= f.label :"ジャンル名" %>
         </td>
         <td class="col-xs-6">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ジャンル名", class:"col-xs-12" %>
         </td>
         <td>
          <%= f.submit "新規登録", class: "btn btn-success b1 col-xs-2" %>
         </td>
        </tr>
       </tbody>
      </table>
     <% end %>
    </div>
    <br>
    <br>
    <br>
    <div class="leftspace">
     <table class="table col-xs-5 sidline">
      <thead>
       <tr class="grayline backcollor">
        <th>ジャンル</th>
        <th></th>
       </tr>
      </thead>
      <tbody>
       <% @genres.each do |genre| %>
        <tr class="grayline genre-table-bottom">
         <td class="col-xs-6">
          <%= genre.name %>
         </td>
         <td>
          <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success b2" %>
         </td>
        </tr>
       <% end %>
      </tbody>
     </table>
    </div>
   </div>
  </div>
</div>






