<div class="body">
  <div class="container">
   <h3 class="col-xs-offset-1">会員情報編集</h3>
   <div class="row">
     <%= form_with model: @customer, url: end_users_path, local: true do |f| %>
       <div class="col-xs-offset-1 col-xs-12">
         <table class="col-xs-9 tablespace">
           <thead>
             <tr>
               <th class="col-xs-3"></th>
               <th class="col-xs-3"></th>
               <th class="col-xs-3"></th>
               <th class="col-xs-3"></th>
             </tr>
           </thead>
           <tbody>
             <tr>
               <td>氏名</td>
               <td>
                 <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-xs-11" %>
               </td>
               <td>
                 <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-xs-11" %>
               </td>
               <td></td>
             </tr>
             <tr>
               <td>フリガナ</td>
               <td>
                 <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-xs-11" %>
               </td>
               <td>
                 <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-xs-11" %>
               </td>
               <td></td>
             </tr>
             <tr>
               <td>郵便番号</td>
               <td>
                 <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-xs-11" %>
               </td>
               <td></td>
               <td></td>
             </tr>
             <tr>
               <td>住所</td>
               <td>
                 <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-xs-9" %>
               </td>
               <td></td>
               <td></td>
             </tr>
             <tr>
               <td>電話番号</td>
               <td>
                 <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-xs-11" %>
               </td>
               <td></td>
               <td></td>
             </tr>
             <tr>
               <td>メールアドレス</td>
               <td>
                 <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "col-xs-11" %>
               </td>
               <td></td>
               <td></td>
             </tr>
             <tr>
               <td></td>
               <td></td>
             </tr>
             <tr>
               <td></td>
               <td></td>
             </tr>
             <tr>
               <td></td>
               <td>
                 <%= f.submit "編集内容を保存", class: "btn btn-success b5 col-xs-12" %>
               </td>
               <td>
                 <%= link_to "退会する", end_users_hide_path, class: "btn btn-danger b2 edit-underline" %>
               </td>
             </tr>
           </tbody>
         </table>
       </div>
     <% end %>
   </div>
  </div>
</div>










