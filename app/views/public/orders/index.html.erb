<div class="body">
  <div class="container">
   <h3 class="col-xs-offset-1">注文履歴一覧</h3>
   <div class="row">
    <div class="col-xs-offset-1">
     <table border="1" class="col-xs-11 blackline2 table-b">
       <thead>
         <tr class="backcollor tablehi">
           <th class="table-w1 table-s">注文日</th>
           <th class="table-w2 table-s">配送先</th>
           <th class="table-w1 table-s">注文商品</th>
           <th class="table-w3 table-s">支払金額</th>
           <th class="table-w1 table-s">ステータス</th>
           <th class="table-w1 table-s">注文詳細</th>
         </tr>
       </thead>
       <tbody>
         <% @orders.each do |order| %>
          <tr>
           <td class="table-s">
            <%= l order.created_at, format: :short %>
           </td>
           <td class="table-s">
            <%= "〒" + order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
           </td>
           <td class="table-s">
            <% order.order_details.each do |order_detail| %>
             <%= order_detail.item.name %>
             <br>
            <% end %>
           </td>
           <td class="table-s">
            <%= order.total_payment.floor.to_s(:delimited) + "円" %>
           </td>
           <td class="table-s">
            <%= order.status %>
           </td>
           <td class="paginate">
            <%= link_to "表示する", order_path(order.id), class:"btn btn-danger no-line" %>
           </td>
          </tr>
         <% end %>
       </tbody>
     </table>
    </div>
   </div>
  </div>
</div>